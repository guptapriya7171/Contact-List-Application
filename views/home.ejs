<html>
  <head>
    <title><%= title %></title>
    <script
      src="https://kit.fontawesome.com/7f59543e37.js"
      crossorigin="anonymous"
    ></script>
    <!-- our css must be below all other styles -->
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fa-solid fa-address-book"></i> My Contacts List
    </h1>
    <div id="contacts-list-container">
      <ul>
        <% for(let i of contacts_list){ %>
        <li class="contact">
          <div class="details">
            <p><%= i.name %></p>
            <p><%= i.phone %></p>
          </div>
          
          <div class="delete-button">
            <a href="/delete-contact/?id=<%= i._id %>">
              <i class="fa-solid fa-circle-xmark"></i>
            </a>
          </div>
        </li>
        <% } %>
      </ul>
    </div>

    
    <form action="/create-contact" method="POST">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input type="number" name="phone" placeholder="Enter Phone" required />
      <button type="submit">Add Contact</button>
    </form>

    <script type="type/javascript" src="/js/home.js"></script>
  </body>
</html>
